html {
	box-sizing: border-box;
}

* {
	box-sizing: inherit;
}

body{
	background-color:$grey5;
	font-family: 'Pontano Sans', sans-serif;
}

html,
body {
	height: 100%;
	margin: 0;
}

.row-eq-height{
	@media $medium{
		display: -webkit-box;
  		display: -webkit-flex;
  		display: -ms-flexbox;
  		display: flex;
	}
	
}


#device{
	display:block;

	@media $medium{
		display:none;
	}
}

li.list-group-item{
	background-color:transparent;
	border-color:dimgrey;
}

li.list-group-item a{
	color:#2D2C2C;
}

a {
	color:inherit;


	&:hover{
		color:inherit;
		text-decoration:none;
	}

	&:active, &:focus{
		color:inherit;
		text-decoration:none;
	}


}

*:focus{
	outline:none;
}








