.sep{
	border-bottom:solid 1px;
}

.sep--dashed{
	border-bottom:dashed 1px;
}

[class*="sep"]:last-child{
	border:none;
}



.bg--marathonchanteurs{
	background-image:url('../images/bg-marathonchanteurs.jpg');
	background-size:cover;
	background-repeat:repeat-y;
}

.bg--marbre{
	background-image:url('../images/playlist/playlist-bg.jpg');
}

.bg--marbredark{
	background-image:url('../images/bg-marbre.jpg');
}


.bg--lightgrey{
	background-color:$color8;
}

.bg-op--white{
	background-color:rgba(254,252,255,0.3);
}

.bg-op--white-5 {
	background-color:rgba(254,252,255,0.5);
}



.bg-op--black{
	background-color:rgba(0,0,0,0.3);
}




.bd--light{
	border:solid 1px $grey5;
}



.ribbon{
	display:block;
	left: 0;
	width:100%;
	z-index:1;
	background-color:$color5;


	.flex-container-h{
		position:relative;
		margin: 0 auto;
    	/*width: 50%;*/
    	display: block;
    	font-size: 1.1em;
		color:$grey6;
	}
}



.icon-wrapper{
	display:inline-block;
	vertical-align:middle;
	width:30px;
	height:30px;

	.icon{
		display:block;
		background-size:cover;
		width:100%;
		height:100%;
	}
}


#loading{
	display:none;
	width:50px;
	margin:0 auto;
}




.btn-becky{
	color:$color10;
	display:inline-block;
	font-size: 10px;
	position: relative;
    bottom: 5px;

    .icon-becky{
    	width:20px;
    	height:20px;
    }
}

.btn-becky:hover{
	color:$grey5;
}



#becky-content{
	display:none;
	position:fixed;
	top:0;
	left:0;
	width:100%;
	height:100%;
	z-index:100;
}


.becky-overlay{
	width:100%;
	height:100%;
}


.becky-infos{
	margin-bottom:20px;
	width:90%;
	background-color:$color14;
	font-size:0;
	position:absolute;
	right:-2px;	
	top:10%;
	border:solid 1px darkgrey;
	border-radius:7px 0 0 7px;


	@media $medium{	
		width:500px;
		top:30%;
	}

}

.btn-close-becky{
	position:absolute;
	top:0;
	color:$grey1;
	background-color:transparent;
}

.becky-img{
	flex: 0 1 40%;
	border-right:dashed 1px $grey1;
	height:185px;
	

	span {
		display:block;
		background-image:url("../../tdsbecky/images/rebecca.png");
		background-size: contain;
		background-repeat:no-repeat;
		width:100%;
		height:100%;
	}
	
}

.becky-text{
	font-size:12px;	
	flex: 0 1 40%;
	padding:10px;
}






.user-table .row{
	border-bottom:solid 1px darkgrey;
	padding:10px 0;

}

.user-table .row-title{
	font-weight:bold;
	border-bottom:solid 1px black;
}

.fos-form label{
	text-align:right;
}


.form-becky{
	display:none;
	border-top:solid 1px $grey1;
}





