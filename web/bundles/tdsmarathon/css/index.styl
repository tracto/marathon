.col-saisons{
	background-color:$color2;
	padding:0;


	@media $medium{
		padding:1em;
	}

	.saison-vignette{
		background-color:rgba(255,255,255,0.3);
		position:relative;
		min-height:100%;
		

		.saison-vignette-inner {
			position:relative;
			margin:0 0 1em 0;


			@media $medium{
				margin:0;
			}
			
			/*width:100%;*/
		}


		h3{
			background-color:$grey1;
			color:$color9;
			position: absolute;
			width:100%;
			z-index:1;

			
		}

		.saison-img{
			position:relative;
			width:100%;
			min-height:100%;
			padding-top:100%;
			overflow:hidden;

			img{
				display:block;
				position:absolute;
				height:100%;
				top:0;
				left:0;
				right:0;
				bottom:0;
			}

		}

		.saison-theme-vignette{
			background-color:rgba(255,255,255,0.3);
			margin:0 0 0.5em 0;
			
			@media $medium{				
				margin:0 0 0.5em 0.5em;
			}
		}

		.saison-theme-vignette:last-child {
		    

		    @media $medium{				
				margin:0 0 0 0.5em;
			}
		}

		
	}
}



