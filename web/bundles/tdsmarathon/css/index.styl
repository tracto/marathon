.col-podium-wof{
	color:$grey5;
	padding:1em;

	@media $medium{
		padding:0.8em;
	}

	@media $large{
		padding:1em;
	}


	>div{
		color:$grey1;
	}


	


	.round{
		border: solid 1px $grey2;
		box-shadow: 0px 3px 9px rgba(0, 0, 0, 0.5);
	}
    			
    

	.podium-wrapper{
		/*position:relative;
		top:0;*/
	}

	.podium {
		flex:1 1 33%;
		/*position: relative;*/
    	height: 400px;
    	/*top: 0;*/

		.inner-podium {
			height: 350px;
    		width: 100%;
    		display: block;
    		position: absolute;
    		bottom: 0;
    		left:0;

    		.colonne {
    			width:70%;
    			height:100%;
    			margin: 0 auto;
    			position: relative;
    		}

    		.thumbnail{
				display: block;
				width: 130%;
				margin-left: -15%;
				position: absolute;
				bottom: 190px;
				height: auto;

				@media $medium{
					bottom: 155px;
				}

				@media $large{
					bottom: 115px;
				}


			}

    		

    		.place{
    			display: block;
    			text-align: center;
    			font-size: 2.5em;
    		}

    		.score-wrapper{
    			display: block;
    			text-align: center;
    			
    			position: absolute;
    			bottom: 30px;
    			width: 100%;

    			@media $medium{
					bottom: 25px;
				}

				@media $large{
					bottom: 15px;
				}



    			.score{
					font-size:1.4em;
					
				}

				.points{
					display:flex;
				    flex-direction: row;
				    flex-wrap: wrap;
				    align-items:stretch;
					font-size:0.8em;
					margin:0 2px 0 2px;

					.points-item{
						flex:1 1 100%;
						text-align:center;
						margin: 2px;
						padding:2px;
    					background-color: rgba(0, 0, 0, 0.15);

						@media $medium{
							flex:1 1 30%;
						}						
					}

					.points-item-heart, .points-item-taken{
						padding-top:4px;

						span{
							margin-top:3px;
						}
					}

					span{

						@media $medium{
							display:block;
						}
					}

					svg {
						text-align:center;
						
						/*margin-right:0.2em;*/
					}
				}


    		}

    		.joggeur-name{
				display:block;
    			position:absolute;
    			bottom:5px;
    			width:100%;
    			text-align:center;
    			font-size:1.2em;
    			line-height: 0.8em;
    		}

    		strong {
				opacity:0.8;
			}
			

		}		
	}
	

	.podium-1{
		z-index:6;
		order:2;

		.inner-podium {
			height:400px;

			.colonne {
				background-color:$color11;
			}
			

			.thumbnail{
    			display: block;
    			width: 160%;
    			margin-left: -30%;    			
    		}	
		}		
	}

	.podium-2{
		order:3;

		.inner-podium {
			height: 370px;

			.colonne {
				background-color:$color12;
				
			}
		}
	}

	.podium-3{
		order:1;
		.inner-podium{
			height: 340px;

			.colonne{
				background-color:$color13;
			}
			
			
		}
	}


	


}

