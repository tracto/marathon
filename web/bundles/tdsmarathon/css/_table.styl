table {
  border-collapse: collapse;
  border-spacing: 0;
  border: 1px solid rgba(0,0,0,0.5);
  width: 100%; }

th {
  text-align: left;
  border: 1px solid  rgba(0,0,0,0.5);
  padding: 0.2em; }

td {
  border: 1px solid  rgba(0,0,0,0.5);
  padding: 0.2em; }