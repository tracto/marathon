.popup-delete-confirmation{
	display:none;
	width:100%;
	height:100%;
	position:fixed;
	top:0px;
	left:0px;
	background-color:rgba(0,0,0,0.5);
}

.popup-delete-confirmation div{
	display:block;
	position:absolute;
	top:50%;
	left:50%;
	background-color:lightgrey;
	padding:20px;
	color:#333;
	height:150px;
	width:400px;
	margin:-75px 0 0 -200px;

}

