.form-wrapper{
		width:100%;
		max-width:800px;
		margin:0 auto;
}

.form-group{
	.control-label{
		text-align:center;

		@media $medium{
			text-align:right;
		}
	}

	select{
		text-align:center;
		width: 100%;
	}
}


.date>div{
	display:none;
}


   

.col-addPoints-joggeurTitle{
	border-right:dashed 1px $grey1;

	
}


.heartPoints-icon{
	float:right;
	font-size:1.5em;
	cursor:pointer;
}

.heartPoints-icon.is-active,
.heartPoints-icon.is-active ~ .heartPoints-icon{
	color:#e91862;
}


.heart-empty.is-active{
	color:#333;
}

.heartPoints-icon.is-disabled{
	pointer-events: none;
	opacity: 0.5;
}


.addPoints-form{
	.btn-actualiser{
		background:transparent;
		border:solid 1px $grey1;
		padding: 12px;
    	vertical-align: top;

    	&:hover {
    		color:$color10;
    	}
	}
}


#popup{
	
}

#popup .popup-wrapper{
	display:none;
	position:fixed;
	background-color:rgba(0,0,0,0.3);
	top:0;
	left:0;
	width:100%;
	height:100%;
}

#popup .inner-popup{
	position:absolute;
	background-color:lightgrey;
	width:300px;
	height:200px;
	top:50%;
	left:50%;
	margin:-150px 0 0 -100px;
	
}

#popup .inner-popup .message{
	padding:50px 40px;
}

.score-tags{
	visibility:hidden;
	height:0;
}






