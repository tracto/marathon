.classement{
	width:60%;
	margin:0 auto;
	position:relative;
}

.dropdown-saison{
	font-size:0.6em;
	position:absolute;
	width:100%;
	z-index:2;
	

	.dropdown-saison-wrapper{
		border:solid 1px $grey4;
		box-shadow:0px 1px 2px rgba(0,0,0,0.3);
		position:relative;
		margin:0 auto;
		width:70%;
	}





	.dropdown-saison-item{
		display:none;
		
		margin:0 auto;
		background-color:$grey5;

		&.select{
			background-color:$color2;
			display:block;
			cursor:pointer;

			.icon-arrow-left{
				transform:rotate(0deg);
				transition-duration:0.5s;
			}
			

			&.activate{
				.icon-arrow-left{
					transform:rotate(-90deg);
				}
			}
		}
	}
}

.legende{
	border:solid 1px;
}

.accordion-joggeur{
	
	.accordion-header{
		cursor:pointer;
		border-top:dashed 1px;
	}

	.score{
		font-size:1.2em;
	}

	.icon-arrow-left{
		transform:rotate(180deg);
		transition-duration:0.5s;
	}

	.ui-state-active{
		.icon-arrow-left{
			transform:rotate(270deg);
		}
	}

	.accordion-body{
		color:$grey2;

		.icon{
			padding-right:3px;
		}
	}
}