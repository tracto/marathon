.nav-toggler {
    position: absolute;
    top: -1000px;
}

.nav-toggler__label {
    position: absolute;
    top: 0;
    left: 0;
    z-index:20;
    width: 40px;
    height: 40px;
    fill:$grey6;
    padding:10px 6px;
    margin:0;
    cursor: pointer;
    background-color:transparent;


    @media $medium{
      display: none;
    }
}



.nav-toggler:checked {

    + .nav-toggler__label {
        color: rgba(0,0,0,0.25);
    }

    ~ .navbar-header ul{
    	display:block;
		text-align:center;
    }
}


.navbar-header{
	width: 100%;
	background-color:$color1;
	min-height:40px;
	position:absolute;
	color:$grey6;
	box-shadow: 2px 0 5px #000;
	z-index: 110;

	@media $medium{
		position: fixed;
    	height: 50px;    	
	}
}



.navbar-first{
	display:none;
	margin: 0;
	margin-left: -40px;

	@media $medium{
		display:block;
		padding-top:0 ;
		margin: 0;

	}
}

.navbar-first > li {
	display:block;
	line-height: 50px;
	color:$grey6;


	@media $medium{
		display:inline-block;
		vertical-align: top;
		text-align: center;
    	min-width: 150px;
    	cursor:pointer;
	}	
}

.navbar-first > li:hover{
	background-color:$color18;
}

.navbar-second{	
	display:block;
	background-color:$color1 !important;
	cursor:pointer;

}

.navbar-second ul{
	display:none;
	padding:0;
	margin:0;

	li:hover{
		background-color:$color18;
		width:100%;
	}
}

.navbar-second:hover{
	background-color:$color1 !important;

	> ul{
		display:block;
	}

	
	
}

.navbar-first li.active{
	background-color:$color18;
}


.navbar-first .user {
	border-top:solid 1px $grey5;

	@media $medium{
		border:none;
		float:right;
	}


	.author-name {
		line-height:1.1em;
	}

	.thumbnail{
		height:35px;
	}

	.deconnexion {
		font-size:0.9em;
		text-align:right;
		color:$grey5;
	}
}


.beta {
	width:100%;
	position:absolute;
	top:40px;
	z-index:5;
	font-size:0.8em;

	@media $medium{
		position:fixed;
		top:47px;
		font-size:1em;
	}

	.inner-beta {
		background-color:rgba(255,255,0,0.8);
		color:$grey1;
		width:80%;
		margin:0 auto;
		line-height:1.1em;
		border-radius: 0 0 7px 7px;

		@media $medium{
			width: 300px;
		}
	}
	
}





