{% macro article(article) %}

	<div class="article-wrapper">
		<div class="article-inner-wrapper pam">
			{% if is_granted("ROLE_SUPER_ADMIN") %}
				<div class="pull-right">
					<a class="button btn btn-action" href="{{ path('tds_marathon_article_edit', { 'id': article.id }) }}">
						<svg class="icon icon--s icon-alone icon-pencil"><use xlink:href="#icon-pencil"></use></svg>
					</a>
					<a class='button btn btn-action' data-delete data-href="{{ path('tds_marathon_article_delete', {'id': article.id}) }} "  data-pseudo="{{ article.titre }}">
			            <svg class="icon icon-alone icon--s icon-cancel"><use xlink:href="#icon-cancel"></use></svg>
			        </a>
		     	</div>
			{% endif %}
			<h3 class="article-titre man pan">{{ article.titre }}</h3>
			
			<strong class="article-date">le {{ article.datePost|date('d/m/Y Ã  H:s') }}</strong>
			<div class="article-image mtm">
				{% if article.image is not null %}
					<img class="img-responsive" src="{{ article.image.webPath  | imagine_filter('big_image') }}" alt="{{ article.image.alt }}">
				{% endif %}
			</div>
			<div class="content">
				{{ article.contenu|raw }}
			</div>
		</div>
	</div>
{% endmacro %}