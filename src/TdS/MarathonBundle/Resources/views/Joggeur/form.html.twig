
<div class="form-wrapper bg-op--white bd--light pam">
 
{# <form action="{{ referer }}" {{ form_enctype(form) }} method="POST" class="form-horizontal">  #}
{{ form_start(form) }}
{#  {{ form_start(form,{'action': "{{ app.request.headers.get('referer') }}", 'attr': {'class': 'form-horizontal'} }) }}  #}
{# <form class='form-horizontal' action="{{ referer }}" method="post" {{ form_enctype(form) }}> #}

<form class='form-horizontal' method="post" {{ form_enctype(form) }}>

    {{ form_errors(form) }}
   {#  {% set targetPath %} #}


    <input type="hidden" name="_target_path" value="{{ app.request.headers.get('referer') }}" />

    <div class="form-group row mll mrl ptm pbm sep--dashed">
      {{ form_label(form.pseudo, "Pseudo", {'label_attr': {'class': 'col-xs-12 col-sm-4 control-label'}}) }}
      {{ form_errors(form.pseudo) }}
      <div class="col-xs-12 col-sm-6">
        {{ form_widget(form.pseudo, {'attr': {'class': 'form-control'}}) }}
      </div>
    </div>


    <div class="form-group row mll mrl ptm pbm">
      {{ form_label(form.presentation, "presentation", {'label_attr': {'class': 'col-xs-12 col-sm-4 control-label'}}) }}
      {{ form_errors(form.presentation) }}
      <div class="col-xs-12 col-sm-6">
        {{ form_widget(form.presentation) }}
      </div>
    </div>

    <div class="form-group row mll mrl ptm pbm sep--dashed">
        {{ form_label(form.image, "Ajouter une photo", {'label_attr': {'class': 'col-xs-12 col-sm-4 control-label'}}) }}
        {{ form_errors(form.image) }}
        <div class='col-xs-12 col-sm-6'>
          {{ form_widget(form.image,{'attr':{'class':''}}) }}
        </div>
    </div>


    <fieldset class="form-group row mll mrl ptm pbm">
      <div class="col-xs-12 col-sm-4 align-right">Site Web
        <span class="button btn btn-default btn-becky" data-info="la zone 'nom' apparaîtra sur la page d'accueil publique (colonne 'pas loin') donc intitule le au mieux pour qu'on puissse te reconnaître<br/>Sur ton profil, c'est l'url seule qui est affichée">
            <svg class="icon icon-alone icon-becky"><use xlink:href="#icon-becky"></use></svg>
          </span>
      </div>
      <div class="col-xs-12 col-sm-6">
        <div class="col-xs-12 col-sm-12">
          {{ form_label(form.website.name, "nom", {'label_attr': {'class': 'col-xs-12 col-sm-2 control-label'}}) }}
          {{ form_errors(form.website.name) }}
          <div class="col-xs-12 col-sm-10">
            {{ form_widget(form.website.name, {'attr': {'class': 'form-joggeur-website'}}) }}
          </div>
        </div>

        <div class="col-xs-12 col-sm-12">
          {{ form_label(form.website.url, "url", {'label_attr': {'class': 'col-xs-12 col-sm-2 control-label'}}) }}
          {{ form_errors(form.website.url) }}
          <div class="col-xs-12 col-sm-10">
            {{ form_widget(form.website.url, {'attr': {'class': 'form-joggeur-website'}}) }}
          </div>
        </div>
      </div>
    </fieldset>
    
    <div class="form-group row mll mrl mts pbm">
      {{ form_label(form.mail, "Email", {'label_attr': {'class': 'col-xs-12 col-sm-4 control-label'}}) }}
      {{ form_errors(form.mail) }}
      <div class="col-xs-12 col-sm-6">
        {{ form_widget(form.mail, {'attr': {'class': 'form-control'}}) }}
      </div>
    </div>
    
    <div class="align-center">
        <div class="button btn btn-action mts">
          <svg class="icon icon--s icon-checkmark"><use xlink:href="#icon-checkmark"></use></svg>  
           {{ form_widget(form.valider, {'attr': {'value': 'valider'}}) }}
        </div>
      </div>

  {{ form_rest(form) }}
  {{ form_end(form) }}  
</form> 
</div>









