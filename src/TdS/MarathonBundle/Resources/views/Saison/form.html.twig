<div class="form-wrapper">
   {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}

    {{ form_errors(form) }}

    <div class="form-group form-flex justify-center form-input-title f4">
      {{ form_label(form.titre, "titre", {'label_attr': {'class': 'form-label control-label'}}) }}
      {{ form_errors(form.titre) }}
      <div class="form-widget w-100 w-60-ns">
        {{ form_widget(form.titre) }}
      </div>       
    </div>

    <div class="form-group pv3">
        {% if saison.image is defined and saison.image is not null %}
          <div class="form-flex mb2">
            <span class="form-label control-label self-center">Image précédemment uploadée</span>
            <img class='form-widget self-center w-100 db flex-1 overflow-hidden' src='{{ saison.image.webPath | imagine_filter('header_image') }}'/>
          </div>
        {% endif %}

        <div class="form-flex justify-center">
          {{ form_label(form.image, "Ajouter une photo", {'label_attr': {'class': 'pr2 control-label'}}) }}
          <div class="mr2">
            <span class="button-becky db" data-info="Cette image viendra se placer dans le bandeau entête, sous la tête de mort. Il est important qu'elle soit d'assez bonne qualité. <br/> Taille recommandée : 1960px * 960px / 72dpi  (l'image sera centrée horizontalement) <br/>
            Sous photoshop, il est aussi préférable d'enregistrer pour le web et ses périphériques (menu fichier), en format jpeg." data-btn-becky>
                {% set webpath = "bundles/tdsbecky/images/rebecca.png" %}
                <img class="w-100 db" src="{{ webpath | imagine_filter('becky_thumb') }}" alt="becky">
            </span>
          </div>
        
          <div class='form-widget'>
            {{ form_widget(form.image,{'attr':{'class':''}}) }}
          </div>
        </div>
    </div>



    <div class="form-group form-flex justify-center">
        {{ form_label(form.bilan, "Bilan de la Saison", {'label_attr': {'class': 'form-label control-label'}}) }}
        {{ form_errors(form.bilan) }}
        <div class="form-widget w-100 w-70-ns">
          {{ form_widget(form.bilan) }}
        </div>
    </div>

    
    <div class="center tc">
        <div class="button button-save">
          <svg class="icon icon--xs icon-checkmark"><use xlink:href="#icon-checkmark"></use></svg>  
           {{ form_widget(form.save, {'attr': {'value':'valider'}}) }}
        </div>
    </div>

  {{ form_end(form) }} 
</div>