{% trans_default_domain 'FOSUserBundle' %}

{% block fos_user_content %}
	<div id="content" class="pa4">
			<div class="ms-title flex-1 pv3">
				<svg class="icon icon--s icon-locked"><use xlink:href="#icon-locked"></use></svg>					
				<h2><span class="">Changer de mot de passe</span></h2>	
			</div>

		<div class="form-wrapper bg-op--white bd--light">
			{{ form_start(form, { 'action': path('fos_user_change_password'), 'attr': { 'class': 'fos_user_change_password' } }) }}

			<div class="form-group">
				<div class="w-100 flex flex-wrap justify-center pb3">
			      {{ form_label(form.current_password, "Mot de Passe actuel", {'label_attr': {'class': 'form-label control-label self-center w-40'}}) }}
			     {{ form_errors(form.current_password) }}
			      <div class="form-widget self-center w-60">
			        {{ form_widget(form.current_password, {'attr': {'class': 'form-control'}}) }}
			      </div>
			    </div>

			    <div class="w-100 flex flex-wrap justify-center pb3">
			      {{ form_label(form.plainPassword.first, "Nouveau Mot de Passe", {'label_attr': {'class': 'form-label control-label self-center w-40'}}) }}
			      {{ form_errors(form.plainPassword.first) }}
			      <div class="form-widget self-center w-60">
			        {{ form_widget(form.plainPassword.first, {'attr': {'class': 'form-control'}}) }}
			      </div>
			    </div>

			    <div class="w-100 flex flex-wrap justify-center pb3">
			      {{ form_label(form.plainPassword.second, "Confirmer le nouveau Mot de Passe", {'label_attr': {'class': 'form-label control-label self-center w-40'}}) }}
			     {{ form_errors(form.plainPassword.second) }}
			      <div class="form-widget self-center w-60">
			        {{ form_widget(form.plainPassword.second, {'attr': {'class': 'form-control'}}) }}
			      </div>
			    </div>

			    <div class="center tc">
			        <div class="button button-save">
			          <svg class="icon icon--s icon-checkmark"><use xlink:href="#icon-checkmark"></use></svg>  
			           <button class="" type="submit">valider</button>
			        </div>
			    </div>	    
			{{ form_end(form) }}
		</div>
	</div>
{% endblock fos_user_content %}

