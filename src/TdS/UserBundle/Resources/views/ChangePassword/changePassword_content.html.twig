{% trans_default_domain 'FOSUserBundle' %}

{% block fos_user_content %}
	<div class="bg--lightgrey pam pbxxl">
			<h1 class="main-title man align-center">
				<svg class="icon icon--m icon-locked"><use xlink:href="#icon-locked"></use></svg>
				<span>Changer de mot de passe</span>
			</h1>

		<div class="form-wrapper bg-op--white bd--light pam">
			{{ form_start(form, { 'action': path('fos_user_change_password'), 'attr': { 'class': 'fos_user_change_password' } }) }}


				<div class="form-group row mll mrl ptm pbm sep--dashed">
			      {{ form_label(form.current_password, "Mot de Passe actuel", {'label_attr': {'class': 'col-xs-12 col-sm-4 control-label'}}) }}
			     {{ form_errors(form.current_password) }}
			      <div class="col-xs-12 col-sm-6">
			        {{ form_widget(form.current_password, {'attr': {'class': 'form-control'}}) }}
			      </div>
			    </div>

			    <div class="form-group row mll mrl ptm pbm">
			      {{ form_label(form.plainPassword.first, "Nouveau Mot de Passe", {'label_attr': {'class': 'col-xs-12 col-sm-4 control-label'}}) }}
			      {{ form_errors(form.plainPassword.first) }}
			      <div class="col-xs-12 col-sm-6">
			        {{ form_widget(form.plainPassword.first, {'attr': {'class': 'form-control'}}) }}
			      </div>
			    </div>

			    <div class="form-group row mll mrl ptm pbm">
			      {{ form_label(form.plainPassword.second, "Confirmer le nouveau Mot de Passe", {'label_attr': {'class': 'col-xs-12 col-sm-4 control-label'}}) }}
			     {{ form_errors(form.plainPassword.second) }}
			      <div class="col-xs-12 col-sm-6">
			        {{ form_widget(form.plainPassword.second, {'attr': {'class': 'form-control'}}) }}
			      </div>
			    </div>

			    <div class="align-center">
			        <div class="button btn btn-action mts">
			          <svg class="icon icon--s icon-checkmark"><use xlink:href="#icon-checkmark"></use></svg>  
			           <button class="" type="submit">valider</button>
			        </div>
			    </div>	    
			{{ form_end(form) }}
		</div>
	</div>
{% endblock fos_user_content %}

